# OpsCo Ad Network Configuration
# Contact your OpsCo representative for site ID
NEXT_PUBLIC_OPSCO_SITE_ID=

# YieldLift Ad Network Configuration
# Contact your YieldLift representative for publisher ID
NEXT_PUBLIC_YIELDLIFT_PUBLISHER_ID=

